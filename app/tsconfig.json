{
  "compilerOptions": {
    "target": "es6",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "../dist",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
